{
  "compilerOptions": {
    "paths": {
      "@hapi/hapi": ["./node_modules/hapi21"],
    },
    "lib": [ "es2017"],
    "outDir": "lib",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "newLine": "lf",
    "sourceMap": true,
    "types": [
      "jest",
      "node",
      "./types/time-fix-plugin.d.ts"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "node_modules",
    "**/*.d.ts"
  ]
}
